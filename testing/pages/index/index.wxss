/**index.wxss**/

.selection{
  border-bottom: 3px solid #ddd;

}

.swiper{
  height: 100%;
  width: 100%;
}

.swiper .slide-image{
  width: 100%;
  height: 100%;
}

.head{
  border-left-width: 2px;
  border-left-style: solid;
  border-left-color: lightgreen;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 60rpx;
  padding-left: 10rpx;
  padding-right: 10rpx;
  margin-top: 20rpx;
  margin-bottom: 10rpx;
}

.text-all{
  color: greenyellow;
  font-size: 24rpx;
}

.content{
  display: flex;
  flex-direction: row;
  flex-flow: wrap;
  justify-content: center;
}

.content .content-item{
  height: 260rpx;
  width: 45%;
  background: gainsboro;
  margin: 8rpx;
  position: relative;
}

.content .content-item image{
  height: 100%;
  width: 100%;
}

.content .content-item .content-item-text{
  position: absolute;
  font-size: 26rpx;
  bottom: 0;
  color: #fff;
  background: -webkit-linear-gradient(to top, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.2));
  background: linear-gradient(to top, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.2));
  height: 28rpx;
  width: 100%;
}

.list{
  height: 520rpx;
  width: 100%;
}

.list .list-item{
  height: 100%;
  width: 100%;
}

.list .list-item .list-item-image{
  height: 360rpx;
  width: 100%;
  position: relative;
}

.list .list-item .list-item-image .list-item-image-img{
  height: 360rpx;
  width: 100%;
}

.list-item-text{
  height: 160rpx;
  width: 94%;
  margin-top: 22rpx;
  padding-left: 4%;
  padding-right: 4%;
}

/* .list-item-text-title{

} */

.list-item-text-desc{
  font-size: 12px;
  color: lightgray;
  margin-top: 18rpx;
}

.list .avatar{
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  position: absolute;
  bottom: -40rpx;
  right: 20rpx;
}

