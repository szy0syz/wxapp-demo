.container {
  width: 100%;
}

.topic {
  position: relative;
  border-bottom: 6px solid #EFEFF3;
  padding: 5px 6px 5px 6px;
}

.userInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userInfo image {
  height: 32px;
  width: 32px;
}

.userInfo:nth-child(2){
  font-size: 15px;
  color: #576b95;
  margin-left: 5px;
}

.footerInfo{
  margin-top: 6px;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 100%;
  height: 20px;
  line-height: 16px;
  font-size: 13px;
  color: #888888;
  /* border: 1px solid #000;   */
}

.title{
  font-size: 16px;
  color: #353535;
}

.replies_info{
  padding: 5px 6px 5px 6px;
  border-bottom: 4px solid #EFEFF3;
}

.content{
  font-size: 14px;
  color: #353535;
}

.rely_detal{
  margin-top: 4px;
  font-size: 14px;
  color: #888888;
}

.topic_created{
  margin-left: 6px;
  margin-top: 2px;
  font-size: 12px;
  color: #888888;
}